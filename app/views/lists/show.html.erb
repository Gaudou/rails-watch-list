<div class="container">
  <h1> <%= @list.name %> </h1>
  <% @bookmarks.each do |bookmark| %>
  <% @movie = Movie.find(bookmark.movie_id) %>
  <p><%= @movie.title %></p>
  <img src="<%=@movie.poster_url%>" width="200">
  <p> <%= @movie.rating %> </p>
  <%= @movie.overview %>
  <br>
   <span> <%= link_to 'Delete this Movie',
             bookmark_path,
             method: :delete,
             data: { confirm: "Are you sure?" },
             class:'btn btn-secondary'%> </span>
  <% end %>
  <br>
  <br>
  <span> <%= link_to 'Back To Home', lists_path, class:'btn btn-secondary'%> </span>
  <span> <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class:'btn btn-secondary'%> </span>

</div>
